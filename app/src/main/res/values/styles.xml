<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CripTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/criptografar</item>
        <item name="colorPrimaryDark">@color/crip2</item>
        <item name="colorAccent">@color/crip2</item>
    </style>

    <style name="DescripTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/descriptografar</item>
        <item name="colorPrimaryDark">@color/descrip2</item>
        <item name="colorAccent">@color/descrip2</item>
    </style>

    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

</resources>
